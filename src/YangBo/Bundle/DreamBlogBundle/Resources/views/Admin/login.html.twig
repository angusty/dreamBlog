<!doctype html>
<html>
<head>
  <title>Login</title>
  <meta charset="utf-8">
  <link rel="shortcut icon" href="{{ asset('bundles/yangbodreamblog/images/favicon.ico') }}"/>
  <link rel="stylesheet" type="text/css" href="{{ asset('bundles/yangbodreamblog/css/login.css') }}" />
</head>
  <body>
    <!-----start-main---->
    {% if error %}
      <center>{{ error.messageKey|trans(error.messageData, 'security') }}</center>
    {% endif %}

    {#{% if error %}#}
      {#<center>{{ error.message|trans }}</center>#}
    {#{% endif %}#}

    <div class="main">
      <div class="login-form">
        <h1>登录</h1>
        <div class="head">
          <img src="{{ asset('bundles/yangbodreamblog/images/user.png') }}" alt=""/>
        </div>
        <form  method="post" action="{{ path('yang_bo_dream_blog_admin_login_check') }}" >
          <input type="text" name="_username" id="username"  value="{{ last_username }}" class="text" />
          <input type="password" id="password" name="_password"/>
          <input type="checkbox" id="remember_me" name="_remember_me" checked/>
          <label for="remember_me">记住我</label>
          <div class="submit">
            <input type="submit" value="LOGIN" />
            <p style="color:red;margin-bottom:5px;"></p>
          </div>
          <p><a href="#">忘记密码 ?</a></p>
        </form>
      </div>
      <!--//End-login-form-->
    </div>
  <!-----//end-main---->
  <script src="{{ asset('bundles/yangbodreamblog/js/jquery-1.11.3.js') }}"></script>

  </body>
</html>
