{% extends 'YangBoDreamBlogBundle::layout.admin.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('bundles/yangbodreamblog/plugins/bui') }}/assets/css/main.css" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script>
    BUI.use('common/main',function(){
      var config = [{
        id:'menu',
        menu:[{
          text:'首页内容',
          items:[
            {id:'main-menu',text:'系统概览',href:'{{ path("yang_bo_dream_blog_admin_system") }}'}
          ]
        }]
      },{
        id:'search',
        menu:[{
          text:'文章管理',
          items:[
            {id: 'category1',text: '文章分类', href:'{{ path("yang_bo_dream_blog_admin_category") }}'},
            {id: 'category2', text: '文章分类树', href: '{{ path("yang_bo_dream_blog_admin_category_tree") }}' }
          ]
        }]
      }];
      new PageUtil.MainPage({
        modulesConfig : config
      });
    });

  </script>
{% endblock javascripts %}

{% block bodys %}
  <div class="header">
    <div class="dl-title"><span class="">前端框架</span></div>
    {% if null != app.user.username %}
    <div class="dl-log">欢迎您，<span class="dl-log-user">{{ app.user.username }}</span>
      {#{{ app.security.getToken().getUsername() }}#}
      <a href="{{ path('yang_bo_dream_blog_admin_logout') }}" title="退出系统" class="dl-log-quit">[退出]</a>
    </div>
    {% endif %}
  </div>
  <div class="content">
    <div class="dl-main-nav">
      <ul id="J_Nav"  class="nav-list ks-clear">
        <li class="nav-item dl-selected"><div class="nav-item-inner nav-storage">首页</div></li>
        <li class="nav-item"><div class="nav-item-inner nav-inventory">管理</div></li>
      </ul>
    </div>
    <ul id="J_NavContent" class="dl-tab-conten">

    </ul>
  </div>
{% endblock %}
